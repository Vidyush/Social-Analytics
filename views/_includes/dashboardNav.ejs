<div class="loader hidden"><img src="/images/tenor_2.gif" style="width:30%;height:40%;">

</div>
 <div class="row">
   <div style="width:80%;">
               <form id="analyze" class="search-form" method="POST">
              <div class="search">
                <input type="text" id="hashtag" name="hashtag" value="<%= keyword.name %>" required readonly>
              </div>
              <div class="filter site">
                
                  <select name="media" id="media" class="form-control mediaCls">
                    <option value="Twitter">Twitter</option>
                    <option value="Insta">Instagram</option>
                   
                  </select>
              
              </div>   
              <div class="btn-search">
                <button type="submit">Filter</button>
              </div>
            </form>
          </div>
            <div style="width:20%">
                <div class="user float-right" > <a href="javascript:void(0);"><img src="/images/dashboard/user.png" alt=""> Hi, <span class="uname"> <%= user.name%> </span></a>
                    <div class="dropuser"><a href="/auth/logout">Logout</a></div>
                  </div>
                </div>
              </div>
          </div>
        
       
      <script>
      function showLoader(obj){
      $('#analyze').submit(function(e) {
      if ($('#hashtag').val().trim() == '') {
        e.preventDefault();
        alert('Please enter a hashtag');
      }
      else{
        $(".search-page").css("opacity", 0.1);
        $(".loader").removeClass('hidden').css({"display": "block", 'z-index': 99});
      }
      });
      }
      $('#media').val('<%-media%>');
      $('.mediaCls').on('change',function(){
        let media = $(this).val(); 
        let pathname = window.location.pathname;
        pathname = pathname.split("/");
        let hashtag = $('#hashtag').val();
        let formAction = '/'+pathname[1]+'/' + hashtag + '/' +media;
        $('#analyze').attr('action', formAction);
    
      })
      </script>
                          
                  